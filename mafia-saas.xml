<?xml version="1.0" encoding="UTF-8"?>
<project name="mafia-saas" default="all">
  
  
  <property file="mafia-saas.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.ear"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module mafia-saas -->
  
  <dirname property="module.mafia-saas.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.mafia-saas" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mafia-saas" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mafia-saas" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mafia-saas" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="mafia-saas.output.dir" value="${module.mafia-saas.basedir}/out/production/mafia-saas"/>
  <property name="mafia-saas.testoutput.dir" value="${module.mafia-saas.basedir}/out/test/mafia-saas"/>
  
  <path id="mafia-saas.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mafia-saas.module.production.classpath">
    <path refid="${module.jdk.classpath.mafia-saas}"/>
    <pathelement location="${basedir}/resources/mysql-connector-java-5.1.41-bin.jar"/>
  </path>
  
  <path id="mafia-saas.runtime.production.module.classpath">
    <pathelement location="${mafia-saas.output.dir}"/>
    <pathelement location="${basedir}/resources/mysql-connector-java-5.1.41-bin.jar"/>
  </path>
  
  <path id="mafia-saas.module.classpath">
    <path refid="${module.jdk.classpath.mafia-saas}"/>
    <pathelement location="${mafia-saas.output.dir}"/>
    <pathelement location="${basedir}/resources/mysql-connector-java-5.1.41-bin.jar"/>
  </path>
  
  <path id="mafia-saas.runtime.module.classpath">
    <pathelement location="${mafia-saas.testoutput.dir}"/>
    <pathelement location="${mafia-saas.output.dir}"/>
    <pathelement location="${basedir}/resources/mysql-connector-java-5.1.41-bin.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.mafia-saas">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mafia-saas">
    <patternset refid="excluded.from.module.mafia-saas"/>
  </patternset>
  
  <path id="mafia-saas.module.sourcepath">
    <dirset dir="${module.mafia-saas.basedir}">
      <include name="src"/>
      <include name="resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mafia-saas" depends="compile.module.mafia-saas.production,compile.module.mafia-saas.tests" description="Compile module mafia-saas"/>
  
  <target name="compile.module.mafia-saas.production" depends="register.custom.compilers" description="Compile module mafia-saas; production classes">
    <mkdir dir="${mafia-saas.output.dir}"/>
    <javac2 destdir="${mafia-saas.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mafia-saas}/javac">
      <compilerarg line="${compiler.args.mafia-saas}"/>
      <bootclasspath refid="mafia-saas.module.bootclasspath"/>
      <classpath refid="mafia-saas.module.production.classpath"/>
      <src refid="mafia-saas.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mafia-saas"/>
    </javac2>
    
    <copy todir="${mafia-saas.output.dir}">
      <fileset dir="${module.mafia-saas.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.mafia-saas.basedir}/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mafia-saas.tests" depends="register.custom.compilers,compile.module.mafia-saas.production" description="compile module mafia-saas; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mafia-saas" description="cleanup module">
    <delete dir="${mafia-saas.output.dir}"/>
    <delete dir="${mafia-saas.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.mafia-saas" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.mafia-saas" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>